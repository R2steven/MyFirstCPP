{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: build",
        "command": "gcc",
        "args": [
            "-g",
            "*.cpp",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}",
            "-lstdc++"
        ],
        "options": {
            "cwd": "${workspaceFolder}/HelloWorld"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "detail": "compiler: gcc"
      }
    ]
  }